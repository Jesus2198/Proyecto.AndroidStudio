<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.registra.RevistaRegistraActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/idTitlePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:text="@string/txt_registro_de_revista"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblRegRevistaNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:layout_margin="5dp"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/txtRegRevistaNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/lblRegRevistaFrecuencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frecuencia"
                android:layout_margin="5dp"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/txtRegRevistaFrecuencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/lblRegRevistaFechaCre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha Creacion"
                android:layout_margin="5dp"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/txtRegRevistaFechaCre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/lblRegRevistaFechaReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha Registro"
                android:layout_margin="5dp"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/txtRegRevistaFechaReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/lblRegRevistaEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:layout_margin="5dp"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/txtRegRevistaFechaEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>