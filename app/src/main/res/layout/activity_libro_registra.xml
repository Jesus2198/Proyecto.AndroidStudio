<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.crud.LibroCrudListaActivity"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/idTitlePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:text="@string/txt_registro_de_libro"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblTitLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título:"
                android:layout_margin="5dp"
                android:padding="5dp"
                />

            <EditText
                android:id="@+id/txtTitLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/lblAnLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Año:"
                android:layout_margin="5dp"
                android:padding="5dp"
                />

            <EditText
                android:id="@+id/txtAnLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/lblSerieLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Serie:"
                android:layout_margin="5dp"
                android:padding="5dp"
                />

            <EditText
                android:id="@+id/txtSerieLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/lblCategLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categoría:"
                android:layout_margin="5dp"
                android:padding="5dp"
                />


        </androidx.appcompat.widget.LinearLayoutCompat>


    </ScrollView>

    <Spinner
        android:id="@+id/spnCategLibro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnRegLibro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRAR" />


</androidx.appcompat.widget.LinearLayoutCompat>